import java.awt.*;


public class Wall extends GameComponent
{
	
	
	private int topLeftXPosition = 60;
	private int topLeftYPosition = 60;
	private int width = 20;
	private int height = 1000;

	public Wall(int topLeftXPosition, int topLeftYPosition, Image image) 
	{
		super(topLeftXPosition, topLeftYPosition, image);
	}

	public void draw(Graphics gRef)
	{
		gRef.setColor(Color.blue);
		gRef.fillRect(topLeftXPosition, topLeftYPosition, width, height);
	}
}
